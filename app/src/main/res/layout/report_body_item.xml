<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rpt_body_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/shadow_rect"
        android:elevation="4dp"
        android:fontFamily="@font/m_plus_rounded_1c"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="task"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/rpt_body_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

    </TextView>

    <ImageView
        android:id="@+id/rpt_body_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/arrow"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rpt_body_btn"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>